# Routes
GET     /                           controllers.HomeController.index
GET     /menu                       controllers.HomeController.menu
GET     /dishes                     controllers.HomeController.dishes(sortBy: String)
GET     /auth                       controllers.HomeController.auth
GET     /booking                    controllers.HomeController.booking
POST    /booking                    controllers.HomeController.bookingPost

POST    /login                      controllers.HomeController.login
GET     /logout                     controllers.HomeController.logout
POST    /register                   controllers.HomeController.register

# Map static resources from the /public folder to the /assets URL path
GET     /public/*file               controllers.Assets.versioned(path="/public", file: Asset)